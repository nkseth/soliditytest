{ 
    "version": "0.2.0",
   "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Mocha Tests",
        "program": "./node_modules/mocha/bin/_mocha",
        "args": [
          "-u",
          "bdd",// set to bdd, not tdd
          "--timeout",
          "999999",
          "--colors",
          ".//test/**/*.js"
        ],
        "internalConsoleOptions": "openOnSessionStart"
  },
   ]
   }